<?xml version="1.0" encoding="utf-8"?>
<configuration debug="true" >

    <property
        name="LOG_DIR"
        value="/data/data/${PACKAGE_NAME}/files" />

    <!-- This new rule causes joran to record each new appender into the appender
         store. The store is used to display the appenders. -->
    <newRule pattern="configuration/appender" actionClass="edu.vanderbilt.isis.logger.lib.AppenderStoreAction" />

    <!-- Create a logcat appender -->

    <appender
        name="logcat"
        class="ch.qos.logback.classic.android.LogcatAppender" >

        <checkLoggable>false</checkLoggable>
        <tagEncoder>
            <pattern>laui.%logger{22}</pattern>
        </tagEncoder>
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
    </appender>

    <root level="DEBUG" >
        <appender-ref ref="logcat" />
    </root>

</configuration>